<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_vertical|center_horizontal">

    <!-- Título de la aplicación -->
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tipo de Triángulo"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <!-- EditText para ingresar el primer lado -->
    <EditText
        android:id="@+id/lado1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el lado 1"
        android:inputType="number"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- EditText para ingresar el segundo lado -->
    <EditText
        android:id="@+id/lado2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el lado 2"
        android:inputType="number"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginBottom="16dp"/>

    <!-- EditText para ingresar el tercer lado -->
    <EditText
        android:id="@+id/lado3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Introduce el lado 3"
        android:inputType="number"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginBottom="24dp"/>

    <!-- Botón para determinar el tipo de triángulo -->
    <Button
        android:id="@+id/botonDeterminar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Determinar Tipo de Triángulo"
        android:layout_marginBottom="24dp"/>

    <!-- TextView para mostrar el resultado -->
    <TextView
        android:id="@+id/resultadoTriangulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="El tipo de triángulo se mostrará aquí"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_marginTop="24dp"/>

</LinearLayout>
